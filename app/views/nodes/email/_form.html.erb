<%= simple_form_for(b.new_email_node, defaults: { input_html: { class: 'form-horizontal' } }) do |f| %>
  <%= f.input :name %>
  <%= f.input :description, input_html: { rows: 10 } %>
  <%= f.input :email %>
  <%= f.input :telephones %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :website %>

  <%= f.input :tag_list %>
  <br>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
