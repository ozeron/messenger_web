<div class="find_group_modal">
<!-- Button trigger modal -->
  <button class="btn btn-primary" data-toggle="modal" data-target="#find-vk-group-modal">
    Find group
    <%= t('node.vk.find_group') %>
  </button>

  <!-- Modal -->
  <%= render 'nodes/vk/modal' %>
</div>
<br>

<h3>OR</h3>

<%= simple_form_for(b.new_vk_node, defaults: { input_html: { class: 'form-horizontal' } }) do |f| %>
  <%= f.input :name %>
  <%= f.input :description, input_html: { rows: 10 }%>
  <%= f.input :vk_id, hint: 'Якщо поле ввудено руками, додайте мінус перед id. Приклад: -5' %>
  <%= f.input :tag_list %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
